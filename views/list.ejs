<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <title>To Do List</title>
</head>
<body>
    <div class="box" id="heading">
        <h1> <%= kindOfDay %></h1>
    </div>
    
    <div class="box">
      <% newListItems.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                    <p><%= item.content %></p>
                </div>
            </form>
        <% }) %>

        <form class="item" action="/home" method="post" autocomplete="off">
            <input type="text" name="newItem" placeholder="New Item">
            <button type="submit" name="button">+</button>
        </form>
    </div>
    <div class="box-button" id="heading">
        <form action="/logout" method="post" autocomplete="off">
            <a href="https://localhost:3000/logout"><button type="submit" name="button"><b>Logout</b></button></a>
        </form>
    </div>
    
</body>
</html>